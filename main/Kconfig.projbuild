menu "HowdyScreen Configuration"

    menu "WiFi Settings"
        config HOWDY_WIFI_SSID
            string "WiFi SSID"
            default "YourWiFiNetwork"
            help
                WiFi network name (SSID) to connect to.
                Configure this with your actual WiFi network name.

        config HOWDY_WIFI_PASSWORD
            string "WiFi Password"  
            default "YourWiFiPassword"
            help
                WiFi network password (WPA/WPA2).
                Leave blank for open networks.
                
        config HOWDY_WIFI_MAX_RETRY
            int "Maximum WiFi connection retries"
            default 5
            range 1 10
            help
                Maximum number of attempts to connect to WiFi before giving up.
    endmenu

    menu "HowdyTTS Server Settings"

        config HOWDY_SERVER_IP
            string "HowdyTTS Server IP/Hostname"
            default "192.168.1.100"
            help
                IP address or hostname of your computer running HowdyTTS.
                Can use mDNS name like "howdytts.local" if mDNS is enabled.
                
        config HOWDY_SERVER_PORT
            int "HowdyTTS Server Port"
            default 8080
            range 1 65535
            help
                Port number for HowdyTTS WebSocket server.
                
        config HOWDY_AUTO_DISCOVER
            bool "Enable automatic server discovery"
            default y
            help
                Use mDNS to automatically discover HowdyTTS servers on the network.
    endmenu

    menu "Device Configuration"
        config HOWDY_DEVICE_ROOM
            string "Room Name"
            default "Living Room"
            help
                Name of the room where this ESP32-P4 device is located.
                This helps the HowdyTTS server identify and target specific rooms.
                Examples: "Living Room", "Kitchen", "Bedroom", "Office"
                
        config HOWDY_DEVICE_NAME
            string "Device Name"
            default "HowdyScreen"
            help
                Custom name for this ESP32-P4 device.
                Will be displayed in HowdyTTS server device list.
                Examples: "Kitchen Display", "Bedroom Assistant", "Main Screen"
    endmenu
    
    config HOWDY_AUDIO_TASK_PRIORITY
        int "Audio Task Priority"
        default 23
        range 1 25
        help
            FreeRTOS priority for audio capture task

    config HOWDY_USE_ESP_WIFI_REMOTE
        bool "Use ESP32-C6 WiFi Remote"
        default y
        help
            Enable ESP32-C6 co-processor for WiFi connectivity via SDIO

    menu "SDIO Pin Configuration"
        depends on HOWDY_USE_ESP_WIFI_REMOTE

        config HOWDY_SDIO_CLK_GPIO
            int "SDIO Clock GPIO"
            default 36
            help
                GPIO pin for SDIO clock line

        config HOWDY_SDIO_CMD_GPIO
            int "SDIO Command GPIO" 
            default 37
            help
                GPIO pin for SDIO command line

        config HOWDY_SDIO_D0_GPIO
            int "SDIO Data 0 GPIO"
            default 35
            help
                GPIO pin for SDIO data line 0

        config HOWDY_SDIO_D1_GPIO
            int "SDIO Data 1 GPIO"
            default 34
            help
                GPIO pin for SDIO data line 1

        config HOWDY_SDIO_D2_GPIO
            int "SDIO Data 2 GPIO"
            default 33
            help
                GPIO pin for SDIO data line 2

        config HOWDY_SDIO_D3_GPIO
            int "SDIO Data 3 GPIO"
            default 48
            help
                GPIO pin for SDIO data line 3

        config HOWDY_SLAVE_RESET_GPIO
            int "ESP32-C6 Reset GPIO"
            default 47
            help
                GPIO pin for ESP32-C6 reset line
    endmenu

    config WEBSOCKET_BUFFER_SIZE
        int "WebSocket Buffer Size"
        default 2048
        help
            Buffer size for WebSocket communication

    menu "Network Discovery"
        config MDNS_ENABLED
            bool "Enable mDNS Service"
            default y
            help
                Enable mDNS for automatic service discovery.
                Required for auto-discovering HowdyTTS servers.

        config MDNS_HOSTNAME
            string "Device mDNS Hostname"
            default "howdyscreen"
            depends on MDNS_ENABLED
            help
                Hostname for this device in mDNS service advertisement.
                Will be accessible as <hostname>.local on the network.
    endmenu
    
    menu "Display Settings"
        config DISPLAY_BRIGHTNESS
            int "Default Display Brightness (%)"
            default 80
            range 10 100
            help
                Default brightness level for the display (10-100%).
                
        config DISPLAY_DEMO_MODE
            bool "Enable Demo Mode"
            default n
            help
                Enable demo mode to cycle through voice assistant states.
                Useful for testing without network connection.
    endmenu
endmenu